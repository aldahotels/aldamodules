<?xml version="1.0"?>
<odoo>
    <record id="pms_property_views_form" model="ir.ui.view">
        <field name="name">pms.property.views.form.purchase.portal.inherit</field>
        <field name="model">pms.property</field>
        <field name="inherit_id" ref="pms.pms_property_views_form" />
        <field name="arch" type="xml">
            <sheet position="before">
                <header>
                    <button name="action_remove_products_not_in_sellers" string="Remove Products Not In Sellers" type="object" class="oe_highlight"/>
                    <button name="action_load_all_seller_products" string="Add all seller's products" type="object" class="oe_highlight"/>
                    <button name="action_open_supplier_products" string="Add sellers and products" type="object" class="oe_highlight"/>
                </header>
            </sheet>
            <notebook position="inside">
                <page string="Purchase Portal" name="purchase_portal">
                    <group>
                        <field name="seller_ids" widget="many2many"/>
                        <field name="wharehouse_id" domain="[('company_id', '=', company_id)]"/>
                    </group>
                    <field name="product_seller_ids" widget="many2many" invisible="1"/>
                    <field name="product_ids" widget="many2many" domain="[('id', 'in', product_seller_ids)]"/>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
