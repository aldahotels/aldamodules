                                style="text-decoration:none;font-weight:bold;background-color:transparent;color:rgb(36, 36, 36);"
                            >
                                <img
                                    src="https://firma.aldahotels.es/img/fb_white.png"
                                    alt="facebook"
                                    style="border-style:none;height:auto;
                                vertical-align:middle;padding:5px 3px;width: auto;"
                                    href="https://www.facebook.com/AldaHotels/"
                                    width="25"
                                    height="25"
                                />
                            </a>
                            <a
                                href="https://www.youtube.com/channel/UCJ20x2dNJt5JIOgONS59aDw"
                                style="text-decoration:none;font-weight:bold;background-color:transparent;color:rgb(36, 36, 36);"
                            >
                                <img
                                    src="https://firma.aldahotels.es/img/yt_white.png"
                                    alt="youtube"
                                    style="border-style:none;height:auto;vertical-align:middle;
                                padding:5px 3px;width: auto;"
                                    width="25"
                                    height="25"
                                />
                            </a>
                            <a
                                href="https://www.instagram.com/aldahotels/?hl=en/"
                                style="text-decoration:none;font-weight:bold;background-color:transparent;color:rgb(36, 36, 36);"
                            >
                                <img
                                    src="https://firma.aldahotels.es/img/ig_white.png"
                                    alt="instagram"
                                    style="border-style:none;height:auto;
                                vertical-align:middle;padding:5px 3px;width: auto;"
                                    width="25"
                                    height="25"
                                />
                            </a>
                            <a
                                href="https://es.linkedin.com/company/aldahotels"
                                style="text-decoration:none;font-weight:bold;background-color:transparent;color:rgb(36, 36, 36);"
                            >
                                <img
                                    src="https://firma.aldahotels.es/img/in_white.png"
                                    alt="linked-in"
                                    style="border-style:none;height:auto;
                                vertical-align:middle;padding:5px 3px;width: auto;"
                                    width="25"
                                    height="26"
                                />
                            </a>
                            <a
                                href="https://twitter.com/AldaHotels"
                                style="text-decoration:none;font-weight:bold;background-color:transparent;color:rgb(36, 36, 36);"
                            >
                                <img
                                    src="https://firma.aldahotels.es/img/x_white.png"
                                    alt="x"
                                    style="border-style:none;height:auto;
                                vertical-align:middle;padding:5px 3px;width: auto;"
                                    width="25"
                                    height="25"
                                />
                            </a><br />
                            <a
                                href="https://www.aldahotels.es/"
                                style="text-decoration:none;font-weight:bold;background-color:transparent;font-size:15px;font-family:sans-serif;color:#FFFFFF"
                            >
                                aldahotels.es
                            </a>
